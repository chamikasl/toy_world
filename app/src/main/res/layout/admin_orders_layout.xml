<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Date and Time"
            android:textAlignment="viewEnd"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_marginTop="5dp"
            android:text="Address"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/type_of_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_date_time"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="Payment Type"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/order_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_of_payment"
            android:layout_marginTop="5dp"
            android:text="Phone"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/type_of_payment"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:text="Price"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_total_price"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Note"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/show_all_product_btn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_note"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:text="View"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp" />

        <Button
            android:id="@+id/process_order_btn"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_note"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:text="Process"
            android:textColor="#FFFFFFFF"
            android:textSize="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>